@model PFE_reclamation.Models.User
@{
    Layout = null;
}




<!DOCTYPE html>

<html lang="en">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="~/Content/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="author" content="LEFT4CODE">
    <title>Login</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="~/Content/app.css">
    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="login">

    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <a href="" class="-intro-x flex items-center pt-5">
                    <img alt="Midone Tailwind HTML Admin Template" class="w-6" src="~/Content/images/logo.svg">
                </a>
                <div class="my-auto">
                    <img alt="Midone Tailwind HTML Admin Template" class="-intro-x w-1/2 -mt-16" src="~/Content/images/illustration.svg">
                    <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                        Bienvenue
                        <br>

                    </div>
                    <div class="-intro-x mt-5 text-lg text-white dark:text-gray-500"></div>
                </div>
            </div>
            <!-- END: Login Info -->
            <!-- BEGIN: Login Form -->
            <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
                <div class="my-auto mx-auto xl:ml-20 bg-white xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                        Se connecter
                    </h2>
                    <div class="intro-x mt-2 text-gray-500 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
                    @using (Html.BeginForm("Signin", "Users", FormMethod.Post)) {
                        @Html.AntiForgeryToken()
                        if (ViewData.ModelState.ContainsKey("login")) {

                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            }


                        <div class="intro-x mt-8">
                            @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "intro-x login__input input input--lg border border-gray-300 block", placeholder = "Email" } })
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "intro-x login__input input input--lg border border-gray-300 block mt-4", placeholder = "Password", @Type = "password" } })


                        </div>



                        <div class="intro-x flex text-gray-700 dark:text-gray-600 text-xs sm:text-sm mt-4">
                            <div class="flex items-center mr-auto">
                                @if (ViewBag.error != null) {
                                    <span class="text-theme-6 mt-2"> @ViewBag.error</span>
                                    }
                            </div>
                            <a href="javascript:;" data-toggle="modal" data-target="#header-footer-modal-preview">Mot de passe oublié?</a>
                        </div>




                        <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                            <button class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-3">Connexion</button>
                        </div>
                        }


                    <div class="intro-x mt-10 xl:mt-24 text-gray-700 dark:text-gray-600 text-center xl:text-left">

                        <br>
                        <a class="text-theme-1 dark:text-theme-10" href=""></a>  <a class="text-theme-1 dark:text-theme-10" href=""></a>
                    </div>



                </div>
            </div>
            <!-- END: Login Form -->
        </div>
    </div>



    <!-- BEGIN: Dark Mode Switcher-->
    <div class="dark-mode-switcher shadow-md fixed bottom-0 right-0 box dark:bg-dark-2 border rounded-full w-40 h-12 flex items-center justify-center z-50 mb-10 mr-10">
        <div class="mr-4 text-gray-700 dark:text-gray-300">Dark Mode</div>
        <input class="input input--switch border" type="checkbox" value="1">
    </div>
    <!-- END: Dark Mode Switcher-->


    <div class="modal" id="header-footer-modal-preview">
        <div class="modal__content">
            <div class="flex items-center px-5 py-5 sm:py-3 border-b border-gray-200 dark:border-dark-5">
                <h2 class="font-medium text-base mr-auto">Mot de passe oublié?</h2>

            

            </div>

            <form action="@Url.Action("forgotpasswor","Users")" method="post">
                <div class="p-5 grid grid-cols-12 gap-4 row-gap-3">
                    <div class="col-span-12 sm:col-span-6">
                        <label>Votre email</label>
                        <input type="text" name="email" class="input w-full border mt-2 flex-1" placeholder="example@gmail.com">
                    </div>

                </div>
                <div class="px-5 py-3 text-right border-t border-gray-200 dark:border-dark-5">
                    <button type="reset" class="button w-20 border text-gray-700 dark:border-dark-5 dark:text-gray-300 mr-1">Annuler</button>
                    <button type="submit" class="button w-20 bg-theme-1 text-white">Envoyer</button>
                </div>
            </form>
           


        </div>
    </div>

    <!-- BEGIN: JS Assets-->
    <script src="~/Scripts/app.js"></script>
    <!-- END: JS Assets-->
</body>
</html>
