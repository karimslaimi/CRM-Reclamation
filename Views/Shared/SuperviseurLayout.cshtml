
<html lang="en">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="~/Content/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Midone admin is super flexible, powerful, clean & modern responsive tailwind admin template with unlimited possibilities.">
    <meta name="keywords" content="admin template, Midone admin template, dashboard template, flat admin template, responsive admin template, web app">
    <meta name="author" content="LEFT4CODE">
    <title>Dashboard - Midone - Tailwind HTML Admin Template</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="~/Content/app.css">
    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="app">
    @{
        var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
        var userid = claimsIdentity.Claims.FirstOrDefault(x => x.Type == "id").Value;

    }
    <!-- BEGIN: Mobile Menu -->
    <div class="mobile-menu md:hidden">
        <div class="mobile-menu-bar">
            <a href="" class="flex mr-auto">
                <img alt="Midone Tailwind HTML Admin Template" class="w-6" src="~/Content/images/logo.svg">
            </a>
            <a href="javascript:;" id="mobile-menu-toggler"> <i data-feather="bar-chart-2" class="w-8 h-8 text-white transform -rotate-90"></i> </a>
        </div>
        <ul>
            <li>
                <a href="@Url.Action("Index","Superviseur")" class="menu menu--active ">
                    <div class="menu__icon"> <i data-feather="home"></i> </div>
                    <div class="menu__title"> Dashboard </div>
                </a>
            </li>
            <li>
                <a href="javascript:;" class="menu ">
                    <div class="menu__icon"> <i data-feather="users"></i> </div>
                    <div class="menu__title"> Clients <i data-feather="chevron-down" class="menu__sub-icon"></i> </div>
                </a>
                <ul class="border-t border-theme-24 py-5 hidden">
                    <li>
                        <a href="@Url.Action("newClient","Superviseur")" class="menu">
                            <div class="menu__icon"> <i data-feather="user-plus"></i> </div>
                            <div class="menu__title"> Ajouter un client</div>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("clients","Superviseur")" class="menu">
                            <div class="menu__icon"> <i data-feather="list"></i> </div>
