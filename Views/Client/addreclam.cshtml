@model PFE_reclamation.Models.Reclamation

@{
    ViewBag.Title = "addreclam";
    Layout = "~/Views/Shared/ClientLayout.cshtml";
}



 



<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Ajouter une reclamation

    </h2>
</div>


<div class="grid grid-cols-12 gap-6 mt-5">

    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <div class="intro-y box lg:mt-5">
            <div class="flex items-center p-5 border-b border-gray-200 dark:border-dark-5">
                <h2 class="font-medium text-base mr-auto">
                    Information Client
                </h2>
            </div>
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-theme-6" })
                @Html.HiddenFor(model => model.id)

                <div class="p-5">
                    <div class="grid grid-cols-12 gap-5">
                        <div class="col-span-12 xl:col-span-6">

                            <div class="mt-3">
                                <label>Titre</label>
                                @Html.EditorFor(model => model.titre, new { htmlAttributes = new { @class = "input w-full border    mt-2" } })
                                @Html.ValidationMessageFor(model => model.titre, "", new { @class = "text-theme-6 mt-2" })
                            </div>
                            <div class="mt-3">

                                <label>Type</label>

                                @Html.EnumDropDownListFor(model => model.type, "-- Sélectionner le type --", new { @class = "select2 w-full", data_hide_search = "true" })
                                @Html.ValidationMessageFor(model => model.type, "", new { @class = "error" })
                            </div>
                          


                        </div>
                        <div class="col-span-12 xl:col-span-6">
                          
                           

                            <div class="mt-3">
                                <label>Description</label>
                                @Html.TextAreaFor(model => model.description,  new { @class = "w-full textarea border mt-2", style= "height:115px"  })
                                @Html.ValidationMessageFor(model => model.description, "", new { @class = "error" })



                            </div>
                        </div>
                    </div>
                    <div class="flex justify-end mt-4">
                        @if (ViewBag.msg != null) {

                            <span class="text-theme-9">
                                @ViewBag.msg
                            </span>
                            }
                        @if (ViewBag.error != null) {

                            <span class=" text-theme-6 ">
                                @ViewBag.error
                            </span>
                            }
                        <button type="submit" class="button w-22 bg-theme-1 text-white ml-auto">Enregistrer</button>
                    </div>
                </div>
                }
        </div>
        <!-- END: Form Layout -->
    </div>

</div>

